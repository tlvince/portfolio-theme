header, footer
  margin: 30px 0

header
  padding-bottom: 15px

footer
  padding-top: 15px

#title
  text-transform: uppercase
  letter-spacing: 2px

#projects
  list-style-type: none
  margin: 30px 0 0
  overflow: hidden
  padding: 0

#projects .project
  background-color: #EEE
  margin-bottom: 20px
  min-height: 305px
  text-align: center

#projects .project > a
  color: inherit
  display: block
  padding: 20px 20px 10px
  text-decoration: none

#projects .project:hover
  background-color: #E5E5E5

#projects .project img
  display: block
  margin: 0 auto
  max-width: 240px

#projects .project p
  margin-top: 10px
  text-align: left

